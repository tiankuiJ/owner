    <select id="selectOwnerOrgList" parameterType="owner" resultType="Map">
        SELECT
        b.id,
        a.id AS userId,
        a.`name` AS ownerName,
        a.phone,
        b.org_id AS orgId,
        b.position,
        b.acreage,
        c.`name` AS orgName,
        b.remark
        FROM
        o_owner a,
        o_owner_org b,
        o_org c
        WHERE
        a.deleted = 0
        AND a.id = b.user_id
        AND b.org_id = c.id
        <if test="orgId!=null">
            and b.org_id=#{orgId}
        </if>
        <if test="childOrg!=null">
            and b.org_id in
            <foreach collection="childOrg" item="o" open="(" separator="," close=")">
                ${o.id}
            </foreach>
        </if>
        <if test="searchStr!=null">
            and concat(a.name, a.phone,b.position) like concat('%',#{searchStr},'%')
        </if>
    </select>

    <update id="updateOwnerOrg" parameterType="owner">
        UPDATE o_owner_org
        SET org_id = #{orgId}, position = #{position}, acreage = #{acreage}, remark = #{remark}
        WHERE id = #{id}
    </update>
    <insert id="insertOwnerOrg" parameterType="owner">
        insert INTO o_owner_org(user_id,org_id,position,acreage,remark) VALUES (#{id},#{orgId},#{position},#{acreage},#{remark})
    </insert>

    <delete id="deleteOwnerOrg" parameterType="INTEGER">
        DELETE from o_owner_org WHERE  id=#{id}
    </delete>

    <select id="selectList" parameterType="owner" resultMap="BaseResultMap">
        SELECT
        a.id,
        a.sex,
        a. NAME,
        a.phone,
        a.birth,
        a.create_time,
        a.job,
        a.zzmm,
        a.whcd,
        GROUP_CONCAT(b.position) AS position,
        sum(b.acreage) AS acreage,
        GROUP_CONCAT(b.remark) AS remark
        FROM
        o_owner a LEFT JOIN
        o_owner_org b on a.id = b.user_id
        WHERE
        a.deleted = 0
        <if test="orgId!=null">
            and b.org_id=#{orgId}
        </if>
        <if test="phone!=null">
            and a.phone=#{phone}
        </if>
        <if test="psd!=null">
            and a.psd=#{psd}
        </if>
        <if test="childOrg!=null">
            and b.org_id in
            <foreach collection="childOrg" item="o" open="(" separator="," close=")">
                ${o.id}
            </foreach>
        </if>
        <if test="searchStr!=null">
            and concat(a.name, a.phone,b.position) like concat('%',#{searchStr},'%')
        </if>
        GROUP BY
        a.id
    </select>

    <select id="webLogin" parameterType="owner" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from o_owner where phone=#{phone} and psd=#{psd} AND deleted!=1
    </select>

    <insert id="insertBatch" parameterType="java.util.List">
        <foreach collection="list" separator=";" item="o">
            INSERT INTO o_owner(name,sex,psd,phone,job,birth,whcd,zzmm,position,acreage,org_id,phonet,remark) VALUES
            (#{o.name},#{o.sex},#{o.psd},#{o.phone},#{o.job},#{o.birth},#{o.whcd},#{o.zzmm},#{o.position},#{o.acreage},#{o.orgId},#{o.phonet},#{o.remark})
        </foreach>
    </insert>

    <select id="selectSumByOrgId" parameterType="java.lang.Integer" resultType="java.lang.Double">
        SELECT sum(a.acreage)
        FROM
            o_owner_org a,
            o_org b
        WHERE
            a.org_id = b.id
            AND (b.id = #{id} OR b.p_id = #{id})
    </select>
</mapper>